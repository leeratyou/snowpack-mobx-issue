{
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "extends": "@snowpack/app-scripts-react/tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["./src/*"],
      "public/*": ["public/*"]
    }
  }
}
